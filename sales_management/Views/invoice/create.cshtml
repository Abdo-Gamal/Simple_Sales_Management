@model sales_management.ModelView.invoicesModelView

@{
    ViewData["Title"] = "create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>create</h2>

<h4>invoicesModelView</h4>
<hr />
<div class="row">
    <div class="col-md-60">
        <form asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label" ></label>
                <input asp-for="Date" class="form-control" readonly/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
          <div class="form-group">
                <label class="control-label">Customer Name </label>
                <select name="customerId" id="customerId" class="form-control ">
                    <br>
                    @foreach (var cstm in ViewBag.CustomerLsit)
                    {

                        <option value="@cstm.Id" selected>@cstm.Customer_name</option>

                    }
                </select>
                <span asp-validation-for="customerId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

